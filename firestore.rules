rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /samples/{sample} {
      allow read: if authenticated();
      allow update: if authenticated() && ownDocument(sample) && request.auth.uid == resource.data.uid;
      allow create: if authenticated() && ownDocument(sample) && request.auth.uid == request.resource.data.uid;
    }
  }

  function authenticated() {
    return request.auth.uid != null && request.auth.token.email.matches('.*@tut.jp');
  }

  function ownDocument(id) {
    return request.auth.uid == id
  }
}